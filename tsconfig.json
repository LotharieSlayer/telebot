{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"sourceMap": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": [ "./src/*" ],
		}
	},
	"files": [
		"src/main.ts"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.json",
		"src/**/*.png"
	],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*",
	]
}